<tr>
  <td>
  <%= image_tag product.image.url(:thumb) %>
  </td>
  <td>
    <h4><%= product.title %></h4>
    <br>
    <p><%= product.description %></p>
  </td>
  <td>
    <%= humanized_money_with_symbol product.price %>
  </td>
  <td>
    <%= quantity %>
  </td>
  <td>
    <%= humanized_money_with_symbol product.price * quantity %>
  </td>
</tr>