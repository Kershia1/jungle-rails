<h1 class="form-title">Login</h1>

<div class="form-container">
  <%= form_tag '/login' do %>

  <div class="form-field">
    Email: <%= text_field_tag :email %>
  </div>
  <div class="form-field">
    Password: <%= password_field_tag :password %>
  </div>

    <%= submit_tag "Submit", class: "submit-button" %>

  <% end %>
</div>